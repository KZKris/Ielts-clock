        }
        .clock {
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px white;
        }
        .time {
            font-size: 50px;
        }
        .labels span {
            font-size: 20px;
            padding: 5px 10px;
            opacity: 1;
            transition: opacity 0.5s;
        }
        .hidden {
            opacity: 0.3;
        }
        .controls button {
            margin: 5px;
            font-size: 16px;
            padding: 10px;
        }
    </style>
